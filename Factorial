import java.util.Scanner;

public class Factorial1 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the value");
		int input = sc.nextInt();
		int i, j;

		for (i = (input); i >= 1; i--) {
			int fact = 1;
			for (j = 1; j <= i; j++) {
				a fact = fact * j;
			}
			System.out.println(i + " " + fact);
		}
	}
}

